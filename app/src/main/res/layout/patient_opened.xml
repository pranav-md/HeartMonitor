<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_blue"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:translationZ="5dp">



        <TextView
            android:id="@+id/patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Chacko K T"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:text="Age: 26"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:text="Gender: Male"
            android:fontFamily="sans-serif-black"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_rectangle"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_green"
            android:text="SEARCH FOR DEVICE"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:elevation="4dp"
            android:translationZ="5dp"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_marginHorizontal="5dp"
            android:text="RECORD HISTORY"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:elevation="4dp"
            android:translationZ="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textView355"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Devices found"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#f1f1f1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="SimpleBLEPeripheral                     :04:99:4C:62:1E:9C:"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dsfsfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="SimpleBLEPeripheral                     :33:64:3V:34:2S:4C:"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>