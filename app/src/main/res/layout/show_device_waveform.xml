<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle_blue">
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp">
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected \u2713"
                android:textAlignment="center"
                android:layout_gravity="right"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-black"

                android:background="@drawable/rounded_rectangle_green"
                android:textSize="20sp" />


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rectangle_orange"
                android:padding="5dp">
                <TextView
                    android:id="@+id/Data_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Received"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-black"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#f1f1f1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/data_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="6F 04 4F 04 29 04 29 04 E3 C7 03 B1 03"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:textColor="#866ec7"
                    android:fontFamily="sans-serif-black"

                    android:background="@drawable/rounded_rectangle_white"
                    android:textSize="15sp" />


            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bg_layout_red"
                android:text="STOP" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/bg_layout"
                android:text="SAVE DATA"
                android:fontFamily="sans-serif-black"
                android:textColor="#ffffff"


                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0.8"
        app:srcCompat="@drawable/wave" />


</LinearLayout>